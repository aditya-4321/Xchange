<% include partials/header %>
	
<form action="/products" method="POST" style="width:30%;margin:2rem auto;padding:10px;box-shadow:0px 0px 2px 0px;margin-top:70px" >
    <h2>Add Product</h2>
    <div class="form-group">
     <label>Title </label>
	<input type="text" name="product[title]" class="form-control" placeholder="product">
	</div>
	<div class="form-group">
	<label>Image </label>
	<input type="text" name="product[img]" class="form-control" placeholder="image">
	</div>
	<div class="form-group">
	<label>description </label>
	<input type="text" name="product[desp]" class="form-control" placeholder="description">
	</div>
	<div class="form-group">
	<label>Price </label>
	<input type="text" name="product[price]" class="form-control" placeholder="price">
	</div>
	<button class="btn btn-success">Submit</button>
</form>
